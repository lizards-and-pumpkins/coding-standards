    "name": "lizards-and-pumpkins/coding-standards",
    "description": "Lizards & Pumpkins Coding Standards for PHP_CodeSniffer",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Vinai Kopp",
            "email": "vinai@lizardsandpumpkins.com"
        },
        {
            "name": "Tim Bezhashvyly",
            "email": "tim@lizardsandpumpkins.com"
        },
        {
            "name": "Fabian Blechschmidt",
            "email": "fabian@lizardsandpumpkins.com"
        }
    ],
    "autoload": {
        "classmap": [
            "src/LizardsAndPumpkins/Traits/PHPDocSniffTrait.php",
            "tests/Integration/Suites/SniffTest.php"
        ]
    },
    "require": {
        "php": "^5.6.0|^7.0",
        "squizlabs/php_codesniffer": "2.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c tests/Integration/phpunit.xml.dist",
        "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --encoding=utf-8 --standard=src/LizardsAndPumpkins/ src/ tests/"
    }
}
